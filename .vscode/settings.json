{
  // VS Code Settings for PetShop API (.NET 9) Development and Debugging
  "dotnet.defaultSolution": "PetShopAPI/PetShopAPI.sln",
  // C# Development Settings
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableAsyncCompletion": true,
  "omnisharp.useModernNet": true,
  // .NET 9 Specific Settings
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "dotnet.symbolSearch.searchReferenceAssemblies": true,
  "dotnet.codeLens.enableReferencesCodeLens": true,
  "dotnet.inlayHints.enableInlayHintsForParameters": true,
  "dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,
  "dotnet.inlayHints.enableInlayHintsForIndexerParameters": true,
  "dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
  "dotnet.inlayHints.enableInlayHintsForOtherParameters": true,
  "dotnet.inlayHints.enableInlayHintsForTypes": true,
  "dotnet.inlayHints.enableInlayHintsForImplicitVariableTypes": true,
  "dotnet.inlayHints.enableInlayHintsForImplicitObjectCreation": true,
  // Debug Settings
  "debug.console.acceptSuggestionOnEnter": "on",
  "debug.console.closeOnEnd": false,
  "debug.console.collapseIdenticalLines": true,
  "debug.console.fontSize": 14,
  "debug.console.historySuggestions": true,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "openOnDebugBreak",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.terminal.clearBeforeReusing": true,
  // File Associations
  "files.associations": {
    "*.cs": "csharp",
    "*.csproj": "xml",
    "*.sln": "text",
    "appsettings*.json": "jsonc",
    "launch.json": "jsonc",
    "tasks.json": "jsonc"
  },
  // Auto Save and Formatting
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  // C# Formatting
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [
      120
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120
  },
  // JSON Formatting (for appsettings, etc.)
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  // Terminal Settings
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "Cascadia Code, Consolas, monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  // Git Integration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  // Explorer Settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.cs": "$(capture).*.cs",
    "*.csproj": "$(capture).*.csproj",
    "appsettings.json": "appsettings.*.json"
  },
  // Search Settings
  "search.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/publish": true,
    "**/*.dll": true,
    "**/*.pdb": true
  },
  // Swagger and API Development
  "rest-client.environmentVariables": {
    "development": {
      "baseUrl": "https://localhost:7001",
      "swaggerUrl": "https://localhost:7001/swagger"
    }
  },
  // Problem Matchers and Diagnostics
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,
  // IntelliSense
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "top",
  // Breakpoint Settings
  "debug.allowBreakpointsEverywhere": true,
  "debug.showInlineBreakpointCandidates": true,
  // Extensions Settings
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  // Workspace Trust
  "security.workspace.trust.untrustedFiles": "open",
  // Custom Settings for PetShop Development
  "petshop.api.baseUrl": "https://localhost:7001",
  "petshop.api.swaggerUrl": "https://localhost:7001/swagger",
  "petshop.databases": {
    "sqlServer": "5CG5123HJ2\\SQLEXPRESS",
    "mongodb": "localhost:27017"
  },
  // Language Server Protocol
  "omnisharp.path": "latest",
  "omnisharp.useGlobalMono": "never",
  "omnisharp.waitForDebugger": false,
  // Symbol Information
  "csharp.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "namespace": "#4EC9B0",
      "class": "#4EC9B0",
      "interface": "#B8D7A3",
      "method": "#DCDCAA",
      "property": "#9CDCFE",
      "variable": "#9CDCFE",
      "parameter": "#9CDCFE"
    }
  },
  "dotnet.codeLens.enableTestsCodeLens": true,
  "dotnet.formatting.organizeImportsOnFormat": true
}