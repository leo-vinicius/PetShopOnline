{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/PetShopAPI"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": "$msCompile",
			"detail": "Build the .NET 9 PetShop API project"
		},
		{
			"label": "clean",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"clean"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/PetShopAPI"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$msCompile",
			"detail": "Clean build artifacts"
		},
		{
			"label": "restore",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"restore"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/PetShopAPI"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$msCompile",
			"detail": "Restore NuGet packages for .NET 9"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"watch",
				"run"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/PetShopAPI"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": [
				{
					"base": "$msCompile",
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^\\s*info:\\s*Started",
						"endsPattern": "^\\s*info:\\s*Application started\\."
					}
				}
			],
			"detail": "Watch for changes and hot reload (.NET 9)"
		},
		{
			"label": "run",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"run"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/PetShopAPI"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
			"problemMatcher": "$msCompile",
			"detail": "Run the PetShop API (.NET 9)"
		},
		{
			"label": "Run PetShop API",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			],
			"options": {
				"cwd": "${workspaceFolder}/PetShopAPI"
			},
			"detail": "Legacy task for compatibility"
		},
		{
			"label": "open-swagger-ui",
			"type": "shell",
			"command": "start",
			"args": [
				"https://localhost:7001/swagger"
			],
			"group": "test",
			"presentation": {
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "shared"
			},
			"detail": "Open Swagger UI in default browser",
			"windows": {
				"command": "start",
				"args": [
					"https://localhost:7001/swagger"
				]
			},
			"linux": {
				"command": "xdg-open",
				"args": [
					"https://localhost:7001/swagger"
				]
			},
			"osx": {
				"command": "open",
				"args": [
					"https://localhost:7001/swagger"
				]
			}
		},
		{
			"label": "test-databases",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"Write-Host 'üîç Testing Database Connections...' -ForegroundColor Cyan; Write-Host 'üìä SQL Server: 5CG5123HJ2\\SQLEXPRESS' -ForegroundColor Yellow; Write-Host 'üçÉ MongoDB: localhost:27017' -ForegroundColor Green; Write-Host '‚úÖ Ready to debug!' -ForegroundColor Green"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"detail": "Test database connections before debugging"
		},
		{
			"label": "publish-release",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"publish",
				"-c",
				"Release",
				"-o",
				"${workspaceFolder}/publish"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/PetShopAPI"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$msCompile",
			"detail": "Publish release build for deployment"
		}
	]
}