        "Logging__LogLevel__Microsoft.AspNetCore": "Warning"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "logging": {
        "moduleLoad": false,
        "diagnosticsLog": {
          "protocolMessages": false
        },
        "trace": false,
        "traceResponse": false,
        "programOutput": true,
        "elapsedTiming": false
      },
      "justMyCode": true,
      "requireExactSource": true,
      "suppressJITOptimizations": true,
      "enableStepFiltering": true
